<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="?attr/actionBarSize"
    android:background="@color/black"
    android:orientation="vertical"
    tools:context=".ui.view.FirstFragment">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/appBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:menu="@menu/action_bar"
        app:title="Hi, Mike"
        app:titleTextColor="@color/white"/>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/timerCard"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:cardCornerRadius="15dp"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/background_gradient">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/ready"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="Are you ready for exams?"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@id/digit3"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/digit1"
                android:layout_width="40dp"
                android:layout_height="60dp"
                android:backgroundTint="#51606060"
                app:cardCornerRadius="15dp"
                app:cardElevation="0dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/digit3"
                app:layout_constraintEnd_toStartOf="@id/digit2"
                app:layout_constraintHorizontal_chainStyle="packed">

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="@color/white"
                    android:textSize="30sp" />

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/digit2"
                android:layout_width="40dp"
                android:layout_height="60dp"
                android:backgroundTint="#74777777"
                app:cardCornerRadius="15dp"
                app:cardElevation="0dp"
                app:layout_constraintStart_toEndOf="@id/digit1"
                app:layout_constraintTop_toTopOf="@id/digit3"
                app:layout_constraintEnd_toStartOf="@id/mark1">

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="1"
                    android:textColor="@color/white"
                    android:textSize="30sp" />

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/mark1"
                android:layout_width="40dp"
                android:layout_height="60dp"
                android:gravity="center"
                android:text=":"
                android:textColor="@color/white"
                android:textSize="45sp"
                app:layout_constraintStart_toEndOf="@id/digit2"
                app:layout_constraintTop_toTopOf="@id/digit3"
                app:layout_constraintEnd_toStartOf="@id/digit3"/>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/digit3"
                android:layout_width="40dp"
                android:layout_height="60dp"
                android:backgroundTint="#74777777"
                app:cardCornerRadius="15dp"
                app:cardElevation="0dp"
                app:layout_constraintBottom_toTopOf="@id/hours"
                app:layout_constraintStart_toEndOf="@id/mark1"
                app:layout_constraintTop_toBottomOf="@id/ready"
                app:layout_constraintEnd_toStartOf="@id/digit4">

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="2"
                    android:textColor="@color/white"
                    android:textSize="30sp" />

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/digit4"
                android:layout_width="40dp"
                android:layout_height="60dp"
                android:backgroundTint="#74777777"
                app:cardCornerRadius="15dp"
                app:cardElevation="0dp"
                app:layout_constraintStart_toEndOf="@id/digit3"
                app:layout_constraintTop_toTopOf="@id/digit3"
                app:layout_constraintEnd_toStartOf="@id/mark2">

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="3"
                    android:textColor="@color/white"
                    android:textSize="30sp" />

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/mark2"
                android:layout_width="40dp"
                android:layout_height="60dp"
                android:gravity="center"
                android:text=":"
                android:textColor="@color/white"
                android:textSize="40sp"
                app:layout_constraintStart_toEndOf="@id/digit4"
                app:layout_constraintTop_toTopOf="@id/digit3"
                app:layout_constraintEnd_toStartOf="@id/digit5"/>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/digit5"
                android:layout_width="40dp"
                android:layout_height="60dp"
                android:backgroundTint="#74777777"
                app:cardCornerRadius="15dp"
                app:cardElevation="0dp"
                app:layout_constraintStart_toEndOf="@id/mark2"
                app:layout_constraintTop_toTopOf="@id/digit3"
                app:layout_constraintEnd_toStartOf="@id/digit6">

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="4"
                    android:textColor="@color/white"
                    android:textSize="30sp" />

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/digit6"
                android:layout_width="40dp"
                android:layout_height="60dp"
                android:backgroundTint="#74777777"
                app:cardCornerRadius="15dp"
                app:cardElevation="0dp"
                app:layout_constraintStart_toEndOf="@id/digit5"
                app:layout_constraintTop_toTopOf="@id/digit3"
                app:layout_constraintEnd_toEndOf="parent">

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="5"
                    android:textColor="@color/white"
                    android:textSize="30sp" />

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/days"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Days"
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/digit1"
                app:layout_constraintStart_toEndOf="@+id/digit1"
                app:layout_constraintTop_toBottomOf="@+id/digit2" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/hours"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hours"
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/digit3"
                app:layout_constraintStart_toEndOf="@+id/digit3"
                app:layout_constraintTop_toBottomOf="@+id/digit3" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/minutes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Minutes"
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/digit5"
                app:layout_constraintStart_toEndOf="@+id/digit5"
                app:layout_constraintTop_toBottomOf="@+id/digit5" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/classes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Classes"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/how_many_classes_today"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:text="6 classes today"
            android:textColor="#6C6C6C"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/class_recycler"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/classes"
        tools:listitem="@layout/item_class" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/homework_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Homework"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/class_recycler" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/homework_recycler"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/homework_text"
        tools:listitem="@layout/item_homework" />


</LinearLayout>